// Globals
Texture2D shaderTexture : register(t0);
SamplerState sample : register(s0);

// Type Defines
struct PixelInput
{
	float4 position : SV_POSITION;
	float2 uv : TEXCOORD0;
};

// Pixel Shader
float4 TexturePixelShader(PixelInput input) : SV_TARGET
{
	float4 textureColor;

	// Sample pixel color
	textureColor = shaderTexture.Sample(sample, input.uv);

	return textureColor;
}